body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,form,fieldset,input,textarea,p,blockquote,th,td 
    margin 0
    padding 0

h1
    text-align center
    margin-bottom 100px

body
    font-family  "'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif"
    font-weight 400
    background linear-gradient(320deg,rgba(118,38,121,1),rgba(74,29,29,1),rgba(83,14,44,1), rgba(15,21,54,1))

a
    text-decoration none

button
    width 200px
    height 50px
    border-radius 40px
    border-style none
    cursor pointer
    background-color rgb(128, 20, 20)
    border-color  rgb(128, 20, 20)
    
    &.btn 
        color  rgb(128, 20, 20)
        border-color  rgb(128, 20, 20)
        
        &.btn-outline
            width 300px

            &:hover
                background-color  rgb(128, 20, 20)
                border-color  rgb(128, 20, 20)
                color white
input
    width 250px
    height 50px
    border-radius 20px
    border-style solid
    cursor pointer


input[type=number] 
    -moz-appearance textfield
    margin 0

input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button
    -webkit-appearance none


select
    width 250px
    height 50px
    border-radius 20px
    border-style solid
    cursor pointer


.app

.app__block
    width 100vw

.app__background
    width 70vw
    height 70vh
    margin auto
    background: rgba( 255, 255, 255, 0.55 )
    box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 )
    backdrop-filter: blur( 9.5px )
    border-radius: 10px
    border: 1px solid rgba( 255, 255, 255, 0.18 )

    h1
        padding 20px


.main__convert-opts
    display inline-flex
    flex-direction column
    align-items center
    justify-content center
    width 40%
    height 84%
    padding 10px

    .convert-opts--textDPI
        margin-top 25px
        margin-bottom 25px

    label[for=extens√£o]
        margin-top 50px
        margin-bottom 20px

.main__pdf
    display flex
    justify-content center
    align-items center  
    float right
    width 55%
    height 80%
    margin 16px 10px
    border-style dashed

    &::after
        content ""
        display flex
        align-content center
        justify-content center
        width 150px
        height 150px
        position absolute
        background url("../assets/pdf.png") no-repeat
        background-size contain
        

    .main__pdf--submit
        display flex
        align-self flex-end
        margin-bottom  30px

@import "./media.styl"
@media $desktop-medium

    .main__convert-opts h2
        text-align center

@media $tablet-medium
    .app__background
        height auto

        .main__pdf
            width auto
            float none
            height 500px

        .main__convert-opts 
            width 100%
            margin-top 20px
            margin-bottom 20px

@media $mobile-medium

    .main__pdf
        background transparent

    button.btn.btn-outline
        width 200px